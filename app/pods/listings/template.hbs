<article class="clearfix" data-template="listings">
  <section class="clearfix margin-bottom-10">
    <h1>{{t "listings"}}</h1>
  </section>
  <section class="clearfix">
    <div class="clearfix margin-bottom-10 padding-bottom-10">
      <div class="width-20 float-left position-relative">
        <div class="balloon-input">
          <input name="query" type="text" class="balloon-input__input" value={{model.delegates.table.filters.title}} oninput={{action "search"}} />
          <label for="query" class="balloon-input__label">{{t 'search'}}</label>
        </div>
      </div>
      <div class="float-left position-relative margin-left-10">
        {{category-filter delegate=model.delegates.categories}}
      </div>
    </div>
    <div class="clearfix">{{listing-table delegate=model.delegates.table sorting=model.sorting pagination=model.pagination}}</div>
  </section>
</article>
