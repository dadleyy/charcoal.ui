<div class="clearfix">
  <div class="clearfix margin-bottom-10">
    <div class="vert-hack__table">
      <div class="vert-hack__cell">
        <div class="display-flex--center">
          <div class="float-left">
            <h4>{{t 'leaderboard'}}</h4>
          </div>
          <div class="float-left margin-left-10 attention">
            <p>{{model.manager.state.game.status}}</p>
          </div>
        </div>
      </div>
      <div class="vert-hack__cell float-right clearfix">
        <div class="float-right clearfix">
          <div class="float-left">
            <a class="button" onClick={{action 'refresh'}}>{{t 'refresh'}}</a>
          </div>
          {{#if active}}
            <div class="float-left margin-left-10">
              <a class="button" onClick={{action 'newRound'}}>{{t 'new_round'}}</a>
            </div>
          {{/if}}
          {{#unless ended}}
            <div class="float-left margin-left-10">
              <a class="button" onClick={{action 'endGame'}}>{{t 'end_game'}}</a>
            </div>
            <div class="float-left margin-left-10">
              {{#hoc-modal as |modal|}}
                {{#modal.button}}
                  <p class="button">{{t 'add_player'}}</p>
                {{/modal.button}}
                {{#modal.body as |modal_body|}}
                  {{#modal_body.title}}
                    <h5><b>{{t 'add_player'}}</b></h5>
                  {{/modal_body.title}}

                  {{#modal_body.content}}
                    {{game-membership-modal game=model.game manager=model.manager}}
                  {{/modal_body.content}}
                {{/modal.body}}
              {{/hoc-modal}}
            </div>
          {{/unless}}
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix">
    {{#if lonely}}
      {{game-setup manager=model.manager game=model.game}}
    {{else}}
      {{game-display-table delegate=model.table_delegate sorting=model.sorting}}
    {{/if}}
  </div>
</div>
